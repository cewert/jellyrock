{
  "files": [
    "manifest",
    "source/**/*.*",
    "components/**/*.*",
    "images/**/*.*",
    "locale/**/*.*",
    "settings/**/*.*",
    {
      "src": "resources/branding/release/*.*",
      "dest": "images"
    }
  ],
  "plugins": [
    "@rokucommunity/bslint",
    "roku-log-bsc-plugin"
  ],
  "rokuLog": {
    "strip": true,
    "insertPkgPath": false,
    "removeComments": true
  },
  "diagnosticFilters": [
    "node_modules/**/*",
    "**/roku_modules/**/*"
  ],
  "autoImportComponentScript": true,
  "stagingDir": "build/staging",
  "retainStagingDir": true
}