{
  "files": [
    "manifest",
    "source/**/*.*",
    "components/**/*.*",
    "images/**/*.*",
    "locale/**/*.*",
    "settings/*.*"
  ],
  "plugins": [
    "@rokucommunity/bslint",
    "brighterscript-xml-plugin",
    "roku-log-bsc-plugin"
  ],
  "lintConfig": "bslint.json",
  "rokuLog": {
    "strip": false,
    "insertPkgPath": true,
    "removeComments": false
  },
  "diagnosticFilters": [
    "node_modules/**/*",
    "**/roku_modules/**/*"
  ],
  "sourceMap": true,
  "autoImportComponentScript": true,
  "stagingDir": "build",
  "retainStagingDir": true
}