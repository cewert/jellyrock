{
  "name": "jellyrock",
  "type": "module",
  "version": "1.2.0",
  "description": "Roku client for Jellyfin media server",
  "dependencies": {
    "@rokucommunity/bslib": "0.1.1",
    "log": "npm:roku-log@0.11.1"
  },
  "devDependencies": {
    "@rokucommunity/bslint": "0.8.38",
    "brighterscript": "0.70.3",
    "brighterscript-formatter": "1.7.19",
    "brighterscript-xml-plugin": "0.2.1",
    "fast-glob": "3.3.3",
    "jshint": "2.13.6",
    "markdownlint-cli2": "0.19.1",
    "rimraf": "6.1.2",
    "roku-deploy": "3.15.0",
    "roku-log-bsc-plugin": "0.8.1",
    "rooibos-roku": "5.15.7",
    "ropm": "0.11.2",
    "spellchecker-cli": "7.0.1",
    "undent": "1.0.0",
    "xml2js": "0.6.2"
  },
  "overrides": {
    "brighterscript": "0.70.3"
  },
  "scripts": {
    "build": "npx rimraf build/ out/ && npx bsc --project bsconfig.json",
    "build:prod": "npx rimraf build/ out/ && npx bsc --project bsconfig-prod.json",
    "build:tdd": "npx rimraf build/ out/ && npx bsc --project bsconfig-tdd.json",
    "build:tests": "npx rimraf build/ out/ && npx bsc --project bsconfig-tests.json",
    "build:tests-unit": "npx rimraf build/ out/ && npx bsc --project bsconfig-tests-unit.json",
    "build:tests-integration": "npx rimraf build/ out/ && npx bsc --project bsconfig-tests-integration.json",
    "changelog:sync-unreleased": "node scripts/changelog-syncer.js sync-unreleased",
    "changelog:sync-release": "node scripts/changelog-syncer.js sync-release",
    "changelog:validate": "node scripts/changelog-syncer.js validate",
    "changelog:status": "node scripts/changelog-syncer.js status",
    "check-formatting": "npx bsfmt --check",
    "docs:settings": "node scripts/generate-settings-docs.cjs",
    "format": "npx bsfmt --write",
    "lint": "npm run check-formatting && npm run lint:bs && npm run validate && npm run lint:json && npm run lint:markdown && npm run lint:spelling && npm run lint:translations",
    "lint:bs": "bslint",
    "lint:json": "jshint --extra-ext .json --verbose --exclude node_modules,scripts ./",
    "lint:markdown": "markdownlint-cli2 \"**/*.md\" \"#node_modules\" \"!CLAUDE.md\" \"!out/\" \"!build/\" \"!**/copilot-instructions.md\" \"!.claude/agents/*.md\" \"!tasks/\"",
    "lint:spelling": "spellchecker -d dictionary.txt --files \"**/*.md\" \"**/.*/**/*.md\" \"!node_modules/**/*.md\" \"!docs/user/app-settings.md\" \"!CHANGELOG.md\"",
    "lint:translations": "node scripts/lint-translations.cjs",
    "postinstall": "npm run ropm",
    "ropm": "ropm copy && node scripts/ropm-hook.cjs",
    "update-translations": "node scripts/update-translations.cjs",
    "validate": "npx bsc --copy-to-staging=false --create-package=false"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/cewert/jellyrock.git"
  },
  "keywords": [
    "jellyrock",
    "jellyfin",
    "roku",
    "roku-client",
    "brighterscript"
  ],
  "author": "Charles Ewert",
  "license": "GPL-2.0",
  "bugs": {
    "url": "https://github.com/cewert/jellyrock/issues"
  },
  "homepage": "https://github.com/cewert/jellyrock"
}
