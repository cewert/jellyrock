<?xml version="1.0" encoding="utf-8"?>
<component name="BackdropFader" extends="Rectangle">
  <interface>
    <field id="uri" type="string" />
    <field id="isAnimated" type="boolean" value="true" />
    <field id="scaleMode" type="string" value="limitSize" />
  </interface>

  <children>
    <Poster id="oldBackground" opacity="0" />
    <Poster id="background" opacity="0" />
    <Rectangle
      id="shade"
      visible="false" />

    <Animation
      id="fadeoutAnimation"
      repeat="false"
      duration="0.5">
      <FloatFieldInterpolator
        id="oldbackgroundInterpolator"
        key="[0.0, 1.0]"
        keyValue="[0.4, 0.0]"
        fieldToInterp="oldBackground.opacity" />
      <FloatFieldInterpolator
        id="shadeInterpolator"
        key="[0.0, 1.0]"
        keyValue="[0.6, 0.0]"
        fieldToInterp="shade.opacity" />
    </Animation>

    <Animation
      id="fadeinAnimation"
      repeat="false"
      easeFunction="linear"
      duration="0.5">
      <FloatFieldInterpolator
        id="backgroundInterpolator"
        key="[0.0, 1.0]"
        keyValue="[0.0, 0.4]"
        fieldToInterp="background.opacity" />
    </Animation>
  </children>
</component>