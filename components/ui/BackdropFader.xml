<?xml version="1.0" encoding="utf-8"?>
<component name="BackdropFader" extends="Rectangle">
  <interface>
    <field id="uri" type="string" />
    <field id="isAnimated" type="boolean" value="true" />
  </interface>

  <children>
    <Poster id="oldBackground" height="1080" width="1920" loadDisplayMode="scaleToFit" opacity="0" />
    <Poster id="background" height="1080" width="1920" loadDisplayMode="scaleToFit" opacity="0" />
    <Rectangle id="shade" height="1080" width="1920" visible="false" />

    <Animation
      id="oldBackgroundFadeout"
      repeat="false"
      duration="0.5">
      <FloatFieldInterpolator
        id="oldbackgroundInterpolator"
        key="[0.0, 1.0]"
        keyValue="[1.0, 0.0]"
        fieldToInterp="oldBackground.opacity" />
    </Animation>

    <Animation
      id="shadeFadeoutAnimation"
      repeat="false"
      duration="0.5">
      <FloatFieldInterpolator
        id="shadeInterpolator"
        key="[0.0, 1.0]"
        keyValue="[0.6, 0.0]"
        fieldToInterp="shade.opacity" />
    </Animation>

    <Animation
      id="fadeinAnimation"
      repeat="false"
      easeFunction="linear"
      duration="0.5">
      <FloatFieldInterpolator
        id="backgroundInterpolator"
        key="[0.0, 1.0]"
        keyValue="[0.0, 1.0]"
        fieldToInterp="background.opacity" />
    </Animation>
  </children>
</component>