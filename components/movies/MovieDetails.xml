<?xml version="1.0" encoding="utf-8"?>
<component name="MovieDetails" extends="JRScreen">
  <children>
    <LayoutGroup layoutDirection="vert" translation="[96, 114]" itemSpacings="[25]" id="details">
      <LayoutGroup layoutDirection="horiz" itemSpacings="[100]" id="infoGroup">
        <LabelPrimaryMedium id="releaseYear" />
        <LabelPrimaryMedium id="runtime" />
        <LabelPrimaryMedium id="officialRating" />

        <LayoutGroup id="communityRatingGroup" layoutDirection="horiz" itemSpacings="[-5]">
          <Poster id="star" uri="pkg:/images/icons/sharp_star_white_18dp.png" height="32" width="32" blendColor="#cb272a" />
          <LabelPrimaryMedium id="communityRating" />
        </LayoutGroup>

        <LayoutGroup id="criticRatingGroup" layoutDirection="horiz" itemSpacings="[-5]">
          <Poster id="criticRatingIcon" height="32" width="32" />
          <LabelPrimaryMedium id="criticRatingLabel" />
        </LayoutGroup>

        <LabelPrimaryMedium id="ends-at" />
        <LabelPrimaryMedium id="aired" />
      </LayoutGroup>
      <LabelPrimaryMedium id="genres" />
      <LabelPrimaryMedium id="director" />

      <LayoutGroup layoutDirection="horiz">
        <LabelPrimaryMedium id="video_codec" vertAlign="bottom" height="39" />
        <LabelPrimarySmallest id="video_codec_count" vertAlign="top" />
      </LayoutGroup>

      <LayoutGroup layoutDirection="horiz">
        <LabelPrimaryMedium id="audio_codec" vertAlign="bottom" height="39" />
        <LabelPrimarySmallest id="audio_codec_count" vertAlign="top" />
      </LayoutGroup>

      <JRButtonGroup id="buttons">
        <IconButton id="playButton" icon="pkg:/images/icons/play.png" text="Play" />
        <IconButton id="watchedButton" icon="pkg:/images/icons/check.png" text="Watched" />
        <IconButton id="favoriteButton" icon="pkg:/images/icons/heart.png" text="Favorite" />
      </JRButtonGroup>

      <LabelPrimaryMedium id="tagline" />
      <LabelPrimaryMedium id="overview" wrap="true" maxLines="8" />
    </LayoutGroup>
    <MovieOptions id="movieOptions" visible="false" />

    <!-- "Cast and Crew" row -->
    <extrasSlider id="movieExtras" />
  </children>
  <interface>
    <field id="itemContent" type="node" />
    <field id="trailerAvailable" type="bool" onChange="trailerAvailableChanged" value="false" />
    <field id="selectedAudioStreamIndex" type="integer" />
    <field id="selectedVideoStreamId" type="string" />
    <field id="quickPlayNode" type="node" alwaysNotify="true" />
    <field id="refreshMovieDetailsData" type="bool" alwaysNotify="true" />
  </interface>
</component>