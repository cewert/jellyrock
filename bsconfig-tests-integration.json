{
  "extends": "bsconfig-tests.json",
  "files": [
    {
      "src": "tests/**/*"
    },
    "!tests/source/tests/unit/**/*",
    "!tests/source/tests/e2e/**/*",
    {
      "src": "source/**/!(Main.brs)",
      "dest": "source"
    },
    {
      "src": "components/**/*",
      "dest": "components"
    },
    {
      "src": "locale/**/*",
      "dest": "locale"
    },
    {
      "src": "settings/**/*",
      "dest": "settings"
    },
    "manifest"
  ],
  "rooibos": {
    "tags": null,
    "isRecordingCodeCoverage": false,
    "showOnlyFailures": true,
    "catchCrashes": true,
    "lineWidth": 70,
    "failFast": false,
    "sendHomeOnFinish": false
  }
}